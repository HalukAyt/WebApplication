@model IEnumerable<WebApp.Entities.Concrete.Booking>

<h2>Bookings</h2>
<p>
    <a asp-action="Create">Create New Booking</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Property ID</th>
            <th>User ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.PropertyId</td>
                <td>@booking.UserId</td>
                <td>@booking.StartDate.ToShortDateString()</td>
                <td>@booking.EndDate.ToShortDateString()</td>
                <td>@booking.TotalPrice</td>
                <td>@booking.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.Id">Details</a> |
                    <a asp-action="Cancel" asp-route-id="@booking.Id">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
