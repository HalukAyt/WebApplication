@model WebApp.Entities.Concrete.Booking

<h2>Cancel Booking</h2>

<h4>Booking</h4>
<hr />
<div>
    <h4>Are you sure you want to cancel this booking?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Property ID
        </dt>
        <dd class="col-sm-10">
            @Model.PropertyId
        </dd>
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>

    <form asp-action="CancelConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Cancel Booking" class="btn btn-danger" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
